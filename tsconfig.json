{
  "compilerOptions": {
    "target": "es2022",
    "module": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "kagome/*": [
        "kagome/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "helpers/**/*",
    "epub-extractor/**/*",
    "tests/**/*",
    "vitest.config.ts",
    "vite.config.ts"
  ]
}